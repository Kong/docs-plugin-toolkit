{
  "fields": [
    {
      "protocols": {
        "elements": {
          "one_of": [
            "grpc",
            "grpcs",
            "http",
            "https",
            "tcp",
            "tls",
            "udp"
          ],
          "type": "string"
        },
        "required": true,
        "default": [
          "grpc",
          "grpcs",
          "http",
          "https"
        ],
        "type": "set"
      }
    },
    {
      "config": {
        "fields": [
          {
            "host": {
              "default": "localhost",
              "type": "string",
              "examples": [
                "127.0.0.1"
              ]
            }
          },
          {
            "port": {
              "between": [
                0,
                65535
              ],
              "default": 8125,
              "type": "integer",
              "examples": [
                8125
              ]
            }
          },
          {
            "prefix": {
              "default": "kong",
              "type": "string"
            }
          },
          {
            "metrics": {
              "elements": {
                "fields": [
                  {
                    "name": {
                      "required": true,
                      "one_of": [
                        "kong_latency",
                        "latency",
                        "request_count",
                        "request_per_user",
                        "request_size",
                        "response_size",
                        "status_count",
                        "status_count_per_user",
                        "unique_users",
                        "upstream_latency"
                      ],
                      "type": "string"
                    }
                  },
                  {
                    "stat_type": {
                      "required": true,
                      "one_of": [
                        "counter",
                        "gauge",
                        "histogram",
                        "meter",
                        "set",
                        "timer"
                      ],
                      "type": "string"
                    }
                  },
                  {
                    "sample_rate": {
                      "gt": 0,
                      "type": "number"
                    }
                  },
                  {
                    "consumer_identifier": {
                      "one_of": [
                        "consumer_id",
                        "custom_id",
                        "username"
                      ],
                      "type": "string"
                    }
                  }
                ],
                "entity_checks": [
                  {
                    "conditional": {
                      "then_field": "stat_type",
                      "if_field": "name",
                      "then_match": {
                        "eq": "set"
                      },
                      "if_match": {
                        "eq": "unique_users"
                      }
                    }
                  },
                  {
                    "conditional": {
                      "then_field": "sample_rate",
                      "if_field": "stat_type",
                      "then_match": {
                        "required": true
                      },
                      "if_match": {
                        "one_of": [
                          "counter",
                          "gauge"
                        ]
                      }
                    }
                  },
                  {
                    "conditional": {
                      "then_field": "consumer_identifier",
                      "if_field": "name",
                      "then_match": {
                        "required": true
                      },
                      "if_match": {
                        "one_of": [
                          "status_count_per_user",
                          "request_per_user",
                          "unique_users"
                        ]
                      }
                    }
                  },
                  {
                    "conditional": {
                      "then_field": "stat_type",
                      "if_field": "name",
                      "then_match": {
                        "eq": "counter"
                      },
                      "if_match": {
                        "one_of": [
                          "status_count",
                          "status_count_per_user",
                          "request_per_user"
                        ]
                      }
                    }
                  }
                ],
                "type": "record"
              },
              "default": [
                {
                  "name": "request_count",
                  "stat_type": "counter",
                  "sample_rate": 1
                },
                {
                  "name": "latency",
                  "stat_type": "timer"
                },
                {
                  "name": "request_size",
                  "stat_type": "timer"
                },
                {
                  "name": "status_count",
                  "stat_type": "counter",
                  "sample_rate": 1
                },
                {
                  "name": "response_size",
                  "stat_type": "timer"
                },
                {
                  "name": "unique_users",
                  "stat_type": "set",
                  "consumer_identifier": "custom_id"
                },
                {
                  "name": "request_per_user",
                  "consumer_identifier": "custom_id",
                  "stat_type": "counter",
                  "sample_rate": 1
                },
                {
                  "name": "upstream_latency",
                  "stat_type": "timer"
                },
                {
                  "name": "kong_latency",
                  "stat_type": "timer"
                },
                {
                  "name": "status_count_per_user",
                  "consumer_identifier": "custom_id",
                  "stat_type": "counter",
                  "sample_rate": 1
                }
              ],
              "type": "array"
            }
          }
        ],
        "required": true,
        "type": "record"
      }
    }
  ]
}