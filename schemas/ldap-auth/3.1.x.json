{
  "fields": [
    {
      "consumer": {
        "type": "foreign",
        "reference": "consumers",
        "eq": null
      }
    },
    {
      "protocols": {
        "type": "set",
        "elements": {
          "type": "string",
          "one_of": [
            "grpc",
            "grpcs",
            "http",
            "https",
            "ws",
            "wss"
          ]
        },
        "default": [
          "grpc",
          "grpcs",
          "http",
          "https",
          "ws",
          "wss"
        ],
        "required": true
      }
    },
    {
      "config": {
        "type": "record",
        "fields": [
          {
            "ldap_host": {
              "required": true,
              "type": "string",
              "examples": [
                "ldap.example.com"
              ]
            }
          },
          {
            "ldap_port": {
              "required": true,
              "type": "integer",
              "between": [
                0,
                65535
              ],
              "default": 389,
              "examples": [
                389
              ]
            }
          },
          {
            "ldaps": {
              "default": false,
              "type": "boolean",
              "required": true
            }
          },
          {
            "start_tls": {
              "default": false,
              "type": "boolean",
              "required": true
            }
          },
          {
            "verify_ldap_host": {
              "default": false,
              "type": "boolean",
              "required": true
            }
          },
          {
            "base_dn": {
              "required": true,
              "type": "string",
              "examples": [
                "dc=example,dc=com"
              ]
            }
          },
          {
            "attribute": {
              "required": true,
              "type": "string",
              "examples": [
                "cn"
              ]
            }
          },
          {
            "cache_ttl": {
              "default": 60,
              "type": "number",
              "required": true
            }
          },
          {
            "hide_credentials": {
              "default": false,
              "type": "boolean",
              "required": true,
              "examples": [
                true
              ]
            }
          },
          {
            "timeout": {
              "default": 10000,
              "type": "number"
            }
          },
          {
            "keepalive": {
              "default": 60000,
              "type": "number"
            }
          },
          {
            "anonymous": {
              "type": "string"
            }
          },
          {
            "header_type": {
              "default": "ldap",
              "type": "string",
              "examples": [
                "ldap"
              ]
            }
          }
        ],
        "required": true,
        "entity_checks": [
          {
            "conditional": {
              "if_match": {
                "eq": true
              },
              "then_field": "start_tls",
              "if_field": "ldaps",
              "then_match": {
                "eq": false
              },
              "then_err": "'ldaps' and 'start_tls' cannot be enabled simultaneously"
            }
          }
        ]
      }
    }
  ]
}