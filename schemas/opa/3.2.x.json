{
  "fields": [
    {
      "consumer": {
        "eq": null,
        "type": "foreign",
        "reference": "consumers"
      }
    },
    {
      "protocols": {
        "elements": {
          "one_of": [
            "grpc",
            "grpcs",
            "http",
            "https"
          ],
          "type": "string"
        },
        "required": true,
        "type": "set",
        "default": [
          "grpc",
          "grpcs",
          "http",
          "https"
        ]
      }
    },
    {
      "config": {
        "fields": [
          {
            "opa_protocol": {
              "type": "string",
              "one_of": [
                "http",
                "https"
              ],
              "default": "http"
            }
          },
          {
            "opa_host": {
              "type": "string",
              "required": true,
              "default": "localhost",
              "examples": [
                "localhost"
              ]
            }
          },
          {
            "opa_port": {
              "type": "integer",
              "required": true,
              "between": [
                0,
                65535
              ],
              "default": 8181,
              "examples": [
                8181
              ]
            }
          },
          {
            "opa_path": {
              "match_none": [
                {
                  "err": "must not have empty segments",
                  "pattern": "//"
                }
              ],
              "required": true,
              "starts_with": "/",
              "type": "string",
              "examples": [
                "/v1/data/example/kong/allowBoolean"
              ]
            }
          },
          {
            "include_service_in_opa_input": {
              "default": false,
              "type": "boolean"
            }
          },
          {
            "include_route_in_opa_input": {
              "default": false,
              "type": "boolean"
            }
          },
          {
            "include_consumer_in_opa_input": {
              "default": false,
              "type": "boolean"
            }
          },
          {
            "include_body_in_opa_input": {
              "default": false,
              "type": "boolean"
            }
          },
          {
            "include_parsed_json_body_in_opa_input": {
              "default": false,
              "type": "boolean"
            }
          },
          {
            "include_uri_captures_in_opa_input": {
              "default": false,
              "type": "boolean"
            }
          },
          {
            "ssl_verify": {
              "type": "boolean",
              "required": true,
              "default": true
            }
          }
        ],
        "type": "record",
        "required": true
      }
    }
  ]
}