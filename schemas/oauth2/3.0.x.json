{
  "fields": [
    {
      "consumer": {
        "type": "foreign",
        "reference": "consumers",
        "eq": null
      }
    },
    {
      "protocols": {
        "type": "set",
        "elements": {
          "type": "string",
          "one_of": [
            "grpc",
            "grpcs",
            "http",
            "https",
            "ws",
            "wss"
          ]
        },
        "required": true,
        "default": [
          "grpc",
          "grpcs",
          "http",
          "https",
          "ws",
          "wss"
        ]
      }
    },
    {
      "config": {
        "entity_checks": [
          {
            "conditional": {
              "then_match": {
                "required": true
              },
              "then_field": "scopes",
              "if_match": {
                "eq": true
              },
              "if_field": "mandatory_scope"
            }
          }
        ],
        "required": true,
        "fields": [
          {
            "scopes": {
              "type": "array",
              "elements": {
                "type": "string"
              },
              "examples": [
                [
                  "email",
                  "phone",
                  "address"
                ]
              ]
            }
          },
          {
            "mandatory_scope": {
              "type": "boolean",
              "required": true,
              "default": false,
              "examples": [
                true
              ]
            }
          },
          {
            "provision_key": {
              "encrypted": true,
              "auto": true,
              "required": true,
              "type": "string",
              "unique": true,
              "examples": [
                "<autogenerated>"
              ]
            }
          },
          {
            "token_expiration": {
              "type": "number",
              "required": true,
              "default": 7200
            }
          },
          {
            "enable_authorization_code": {
              "type": "boolean",
              "required": true,
              "default": false,
              "examples": [
                true
              ]
            }
          },
          {
            "enable_implicit_grant": {
              "type": "boolean",
              "required": true,
              "default": false
            }
          },
          {
            "enable_client_credentials": {
              "type": "boolean",
              "required": true,
              "default": false
            }
          },
          {
            "enable_password_grant": {
              "type": "boolean",
              "required": true,
              "default": false
            }
          },
          {
            "hide_credentials": {
              "type": "boolean",
              "required": true,
              "default": false
            }
          },
          {
            "accept_http_if_already_terminated": {
              "type": "boolean",
              "required": true,
              "default": false
            }
          },
          {
            "anonymous": {
              "type": "string"
            }
          },
          {
            "global_credentials": {
              "type": "boolean",
              "required": true,
              "default": false
            }
          },
          {
            "auth_header_name": {
              "type": "string",
              "default": "authorization"
            }
          },
          {
            "refresh_token_ttl": {
              "type": "number",
              "required": true,
              "default": 1209600
            }
          },
          {
            "reuse_refresh_token": {
              "type": "boolean",
              "required": true,
              "default": false
            }
          },
          {
            "persistent_refresh_token": {
              "type": "boolean",
              "required": true,
              "default": false
            }
          },
          {
            "pkce": {
              "required": false,
              "one_of": [
                "none",
                "lax",
                "strict"
              ],
              "type": "string",
              "default": "lax"
            }
          }
        ],
        "type": "record"
      }
    }
  ]
}