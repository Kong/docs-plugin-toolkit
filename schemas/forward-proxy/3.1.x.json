{
  "fields": [
    {
      "protocols": {
        "type": "set",
        "elements": {
          "type": "string",
          "one_of": [
            "grpc",
            "grpcs",
            "http",
            "https"
          ]
        },
        "default": [
          "grpc",
          "grpcs",
          "http",
          "https"
        ],
        "required": true
      }
    },
    {
      "config": {
        "required": true,
        "fields": [
          {
            "x_headers": {
              "required": true,
              "one_of": [
                "append",
                "transparent",
                "delete"
              ],
              "type": "string",
              "default": "append",
              "examples": [
                "transparent"
              ]
            }
          },
          {
            "http_proxy_host": {
              "type": "string",
              "examples": [
                "example.com"
              ]
            }
          },
          {
            "http_proxy_port": {
              "type": "integer",
              "between": [
                0,
                65535
              ],
              "examples": [
                80
              ]
            }
          },
          {
            "https_proxy_host": {
              "type": "string"
            }
          },
          {
            "https_proxy_port": {
              "type": "integer",
              "between": [
                0,
                65535
              ]
            }
          },
          {
            "proxy_scheme": {
              "required": true,
              "one_of": [
                "http"
              ],
              "type": "string",
              "default": "http",
              "examples": [
                "http"
              ]
            }
          },
          {
            "auth_username": {
              "required": false,
              "referenceable": true,
              "type": "string",
              "examples": [
                "example_user"
              ]
            }
          },
          {
            "auth_password": {
              "required": false,
              "referenceable": true,
              "type": "string",
              "examples": [
                "example_pass"
              ]
            }
          },
          {
            "https_verify": {
              "required": true,
              "type": "boolean",
              "default": false,
              "examples": [
                false
              ]
            }
          }
        ],
        "shorthand_fields": [
          {
            "proxy_host": {
              "type": "string"
            }
          },
          {
            "proxy_port": {
              "type": "integer"
            }
          }
        ],
        "type": "record",
        "entity_checks": [
          {
            "at_least_one_of": [
              "http_proxy_host",
              "https_proxy_host"
            ]
          },
          {
            "at_least_one_of": [
              "http_proxy_port",
              "https_proxy_port"
            ]
          },
          {
            "mutually_required": [
              "http_proxy_host",
              "http_proxy_port"
            ]
          },
          {
            "mutually_required": [
              "https_proxy_host",
              "https_proxy_port"
            ]
          }
        ]
      }
    }
  ]
}