{
  "fields": [
    {
      "config": {
        "required": true,
        "type": "record",
        "fields": [
          {
            "proxy_host": {
              "required": true,
              "type": "string",
              "examples": [
                "example.com"
              ]
            }
          },
          {
            "proxy_port": {
              "required": true,
              "type": "integer",
              "between": [
                0,
                65535
              ],
              "examples": [
                80
              ]
            }
          },
          {
            "proxy_scheme": {
              "required": true,
              "one_of": [
                "http"
              ],
              "type": "string",
              "default": "http",
              "examples": [
                "http"
              ]
            }
          },
          {
            "https_verify": {
              "required": true,
              "type": "boolean",
              "default": false,
              "examples": [
                false
              ]
            }
          }
        ]
      }
    }
  ]
}